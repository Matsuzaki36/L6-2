<% if @product.errors.present? %>
    <p>エラーがあります。</p>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @product , url: {action: :create} do |f| %>
    <p>
        <%= f.label :name, '商品名' %>
        <%= f.text_field :name %>
        <%= f.label :price, '価格' %>
        <%= f.text_field :price %>
        <%= f.submit '登録' %>
    </p>
<% end %>

<br><%= link_to '商品一覧に戻る', products_path %>